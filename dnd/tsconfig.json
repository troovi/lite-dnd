{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "outDir": "./types",
    "baseUrl": "./"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
